<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/Server/src/main/scripts</directory>
            <outputDirectory>/sys/${assembly.version.dir}/scripts</outputDirectory>
            <!-- include all files in all subdirecties -->
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- Configuration -->
        <fileSet>
            <directory>${project.parent.basedir}/Server/src/main/resources/server</directory>
            <outputDirectory>/sys/${assembly.version.dir}/config/server</outputDirectory>
            <includes>
                <!-- include all files in all subdirecties -->
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/Server/src/main/resources/locator</directory>
            <outputDirectory>/sys/${assembly.version.dir}/config/locator</outputDirectory>
            <includes>
                <!-- include all files in all subdirecties -->
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/sys/${assembly.version.dir}/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <!--<excludes>-->
                <!--<exclude>*:Client</exclude>-->
            <!--</excludes>-->
        </dependencySet>
    </dependencySets>
</assembly>